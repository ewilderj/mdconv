{
  "name": "clipboard-markdown-extension",
  "version": "0.1.0",
  "description": "Chrome extension that converts pasted rich text into Markdown",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "build": "npm run clean && npm-run-all build:js copy:assets",
    "build:js": "esbuild src/popup.ts src/background.ts src/content-script.ts --bundle --outdir=dist --format=esm --target=chrome115 --sourcemap",
    "copy:assets": "cpx \"static/**/*\" dist",
    "build:zip": "npm run build && cd dist && zip -r ../mdconv-extension.zip . && cd ..",
    "dev": "npm run clean && npm-run-all --parallel dev:js dev:assets",
    "dev:js": "esbuild src/popup.ts src/background.ts src/content-script.ts --bundle --outdir=dist --format=esm --target=chrome115 --sourcemap --watch",
    "dev:assets": "cpx \"static/**/*\" dist --watch",
    "generate:icons": "node scripts/generate-icons.mjs",
    "test": "tsx --test test/verify-markdown.test.ts"
  },
  "keywords": [
    "chrome-extension",
    "markdown",
    "clipboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.262",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.12.7",
    "@types/turndown": "^5.0.5",
    "cpx": "^1.5.0",
    "esbuild": "^0.23.0",
    "jsdom": "^24.0.0",
    "sharp": "^0.33.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  }
}
